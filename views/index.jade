extends ../node_modules/jade-bootstrap/_bootstrap

head
	title=title
block body
	+navbar("Mini Project", "dropdown_menu")
		+nav_item("/", "active") Home
		+nav_item("/browse") Browse
		+nav_item("/submit") Submit
	form(name="search", method="get", action="/search")
		.form-group.has-feedback(style='max-width:600px')
			div.input
				input.form-control(type='text', placeholder='Search database', name='query')
				i.glyphicon.glyphicon-search.form-control-feedback
			div.actions
				input(type="submit", value="add")
	.container
		h1=title
		.container
			p Welcome to #{title}. We have an excellent collection of videos in stock for you.
			| We are based in !{place}.